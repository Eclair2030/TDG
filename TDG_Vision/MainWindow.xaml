        </DockPanel>
        <TextBlock x:Name="tbMessage" HorizontalAlignment="Center" Grid.Row="1" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Height="920" Width="440" FontSize="18" Background="Gainsboro" Padding="5,0,0,0"/>
        <Canvas x:Name="canvLeft" Grid.Column="1" HorizontalAlignment="Left" Height="510" VerticalAlignment="Top" Width="680" Margin="2,37,0,0" Panel.ZIndex="3" Grid.RowSpan="2" MouseDown="canvLeft_MouseDown" MouseEnter="canvLeft_MouseEnter" MouseLeave="canvLeft_MouseLeave"/>
        <Image x:Name="imgLeft" Grid.Column="1" HorizontalAlignment="Left" Height="510" VerticalAlignment="Top" Width="680" Margin="2,37,0,0" Panel.ZIndex="2" Grid.RowSpan="2" Stretch="Fill" ScrollViewer.VerticalScrollBarVisibility="Disabled" MouseUp="imgLeft_MouseUp"/>
        <Rectangle Grid.Column="1" HorizontalAlignment="Left" Height="510" Stroke="Black" VerticalAlignment="Top" Width="680" Fill="#FF505050" Panel.ZIndex="1" Margin="2,37,0,0" Grid.RowSpan="2"/>
        <Image x:Name="imgRight" Grid.Column="1" HorizontalAlignment="Left" Height="510" VerticalAlignment="Top" Width="680" Margin="684,37,0,0" Panel.ZIndex="2" Grid.RowSpan="2"/>
        <Rectangle Grid.Column="1" HorizontalAlignment="Left" Height="510" Stroke="Black" VerticalAlignment="Top" Width="680" Fill="#FF505050" Panel.ZIndex="1" Margin="684,37,0,0" Grid.RowSpan="2"/>
        <TextBox x:Name="tbxOfsetX" Grid.Column="1" HorizontalAlignment="Left" Margin="139,473,0,0" Grid.Row="1" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <Label Grid.Column="1" Content="X (mm)" HorizontalAlignment="Left" Margin="79,470,0,0" Grid.Row="1" VerticalAlignment="Top" Width="54"/>
        <Label Grid.Column="1" Content="Offset" HorizontalAlignment="Left" Margin="3,470,0,0" Grid.Row="1" VerticalAlignment="Top" Height="75" Width="70" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="18" FontWeight="Normal"/>
        <TextBox x:Name="tbxOfsetY" Grid.Column="1" HorizontalAlignment="Left" Margin="139,498,0,0" Grid.Row="1" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <Label Grid.Column="1" Content="Y (mm)" HorizontalAlignment="Left" Margin="79,495,0,0" Grid.Row="1" VerticalAlignment="Top" Width="54"/>
        <TextBox x:Name="tbxOfsetT" Grid.Column="1" HorizontalAlignment="Left" Margin="139,522,0,0" Grid.Row="1" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <Label Grid.Column="1" Content="T (deg)" HorizontalAlignment="Left" Margin="79,519,0,0" Grid.Row="1" VerticalAlignment="Top" Width="54"/>
        <TextBox x:Name="tbxDelay" Grid.Column="1" HorizontalAlignment="Left" Margin="932,473,0,0" Grid.Row="1" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <Label Grid.Column="1" Content="delay time(s)" Margin="838,470,440,0" Grid.Row="1" VerticalAlignment="Top" Width="90"/>
        <Label x:Name="labToolCalibData" Grid.Column="1" Content="X resolution:" HorizontalAlignment="Left" Margin="120,601,0,0" Grid.Row="1" VerticalAlignment="Top" Width="230" Height="150" Visibility="Hidden" Background="#FFFFECEC" Panel.ZIndex="2"/>
        <Button x:Name="btnSave" Grid.Column="1" Content="Save" Margin="1065,470,215,0" Grid.Row="1" VerticalAlignment="Top" Height="75" Width="88" Click="btnSave_Click"/>
        <Rectangle x:Name="rectToolLmark1" Margin="80,624,1188,196" Width="100" Height="100" Grid.Column="1" Grid.Row="1" Fill="#3300FF00" Panel.ZIndex="1" Stroke="Black" Visibility="Hidden" MouseUp="rect_MouseUp"/>
        <Image x:Name="imgToolLmark1" Margin="80,624,1188,196" Grid.Column="1" Grid.Row="1" Width="100" Height="100" MouseUp="img_MouseUp"/>
        <Rectangle x:Name="rectToolLmark2" Margin="185,624,1083,196" Width="100" Height="100" Grid.Column="1" Grid.Row="1" Fill="#4C00FF00" Panel.ZIndex="1" Stroke="Black" Visibility="Hidden" MouseUp="rect_MouseUp"/>
        <Image x:Name="imgToolLmark2" Margin="185,624,1083,196" Grid.Column="1" Grid.Row="1" Width="100" Height="100" MouseUp="img_MouseUp"/>
        <Rectangle x:Name="rectToolLmark3" Margin="290,624,978,196" Width="100" Height="100" Grid.Column="1" Grid.Row="1" Fill="#4C00FF00" Panel.ZIndex="1" Stroke="Black" Visibility="Hidden" MouseUp="rect_MouseUp"/>
        <Image x:Name="imgToolLmark3"  Grid.Column="1" Grid.Row="1" Margin="290,624,978,196" Width="100" Height="100" MouseUp="img_MouseUp"/>
        <Label Grid.Column="1" Content="L Mark" HorizontalAlignment="Left" Margin="5,636,0,0" Grid.Row="1" VerticalAlignment="Top" Height="75" Width="70" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="18" FontWeight="Normal"/>
        <Rectangle x:Name="rectToolRmark1" Margin="80,734,1188,86" Width="100" Height="100" Grid.Column="1" Grid.Row="1" Fill="#4C00FF00" Panel.ZIndex="1" Stroke="Black" Visibility="Hidden" MouseUp="rect_MouseUp"/>
        <Image x:Name="imgToolRmark1" Margin="80,734,1188,86" Grid.Column="1" Grid.Row="1" Width="100" Height="100" MouseUp="img_MouseUp"/>
        <Rectangle x:Name="rectToolRmark2" Margin="185,734,1083,86" Width="100" Height="100" Grid.Column="1" Grid.Row="1" Fill="#4C00FF00" Panel.ZIndex="1" Stroke="Black" Visibility="Hidden" MouseUp="rect_MouseUp"/>
        <Image x:Name="imgToolRmark2" Margin="185,734,1083,86" Grid.Column="1" Grid.Row="1" Width="100" Height="100" MouseUp="img_MouseUp"/>
        <Rectangle x:Name="rectToolRmark3" Margin="290,734,978,86" Width="100" Height="100" Grid.Column="1" Grid.Row="1" Fill="#4C00FF00" Panel.ZIndex="1" Stroke="Black" Visibility="Hidden" MouseUp="rect_MouseUp"/>
        <Image x:Name="imgToolRmark3" Margin="290,734,978,86" Grid.Column="1" Grid.Row="1" Width="100" Height="100" MouseUp="img_MouseUp"/>
        <Label Grid.Column="1" Content="R Mark" HorizontalAlignment="Left" Margin="5,746,0,0" Grid.Row="1" VerticalAlignment="Top" Height="75" Width="70" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="18" FontWeight="Normal"/>
