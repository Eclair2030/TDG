        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TDG_Vision"
        mc:Ignorable="d"
        Title="MainWindow" Height="1000" Width="1810" Closing="Window_Closing" Loaded="Window_Loaded" AllowsTransparency="True" WindowStyle="None" MouseMove="Window_MouseMove">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="11*"/>
            <ColumnDefinition Width="34*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="23*"/>
        </Grid.RowDefinitions>
        <Label x:Name="labDatetime" Content="date time" HorizontalAlignment="Left" Margin="0,37,0,0" VerticalAlignment="Top" Height="40" Width="220" VerticalContentAlignment="Center" FontSize="18" Background="Black" Foreground="White"/>
        <Label x:Name="labRecipe" Content="recipe infor" HorizontalAlignment="Left" Margin="220,37,0,0" VerticalAlignment="Top" Height="40" Width="220" VerticalContentAlignment="Center" FontSize="18" Background="Black" Foreground="White"/>
